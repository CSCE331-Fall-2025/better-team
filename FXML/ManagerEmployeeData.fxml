<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ManagerEmployeeDataController">

  <top>
    <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #D16D69;">
      <children>
        <Text text="Manager">
          <HBox.margin><Insets left="30.0"/></HBox.margin>
        </Text>
        <Region HBox.hgrow="ALWAYS"/>
        <!-- Optional image: comment out if file not present -->
        <ImageView fitHeight="50.0" preserveRatio="true">
          <HBox.margin><Insets right="30.0"/></HBox.margin>
          <image><Image url="@Panda_Express_Logo.jpg"/></image>
        </ImageView>
      </children>
    </HBox>
  </top>

  <center>
    <HBox spacing="10.0" BorderPane.alignment="CENTER">
      <children>

        <!-- LEFT: Employees -->
        <TableView fx:id="employeeListTable" prefHeight="350.0" prefWidth="200.0">
          <columns>
            <TableColumn fx:id="employeeIdColumn"   text="ID"   prefWidth="70.0"/>
            <TableColumn fx:id="employeeNameColumn" text="Name" prefWidth="130.0"/>
          </columns>
        </TableView>

        <!-- RIGHT: Transactions for selected employee -->
        <TableView fx:id="employeeMetricTable" prefHeight="330.0" prefWidth="360.0">
          <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120.0"/>
            <TableColumn fx:id="timeColumn" text="Time" prefWidth="120.0"/>
            <TableColumn fx:id="costColumn" text="Cost" prefWidth="120.0"/>
          </columns>
        </TableView>

        <!-- NAV -->
        <VBox alignment="CENTER" spacing="10.0">
          <children>
            <Button fx:id="restockNavButton"   text="Restock"       onAction="#handleNavRestock"/>
            <Button fx:id="orderNavButton"     text="Order Trends"  onAction="#handleNavOrder"/>
            <Button fx:id="employeeNavButton"  text="Employee Data" onAction="#handleNavEmployee"/>
          </children>
        </VBox>

      </children>
      <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </BorderPane.margin>
    </HBox>
  </center>

</BorderPane>

